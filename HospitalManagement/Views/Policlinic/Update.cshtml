@model Policlinic;

@{
}

<form method="post">

    <div class="border p-3 mt-5">

        <div class="row pb-3 form-group">
            <h2 class="text-dark"><strong>Polikinlik Güncelle</strong></h2>
            </hr>
        </div>

        <div class="mb-3 form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 form-group">
            <label asp-for=Address></label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <br />

        <button type="submit" class="btn btn-dark" style="width:250px">Polikinlik Güncelle</button>

        <a asp-controller="Policlinic" asp-action="Index" class="btn btn-outline-danger" style="width:250px">
            Polikinlik Listesine Dön
        </a>

    </div>

</form>
