@using HospitalManagement.Data;
@model List<Doctor>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Doktorlar Sayfasi</h1>

@if (@TempData["basarili"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Tebrikler!</strong> <a href="#" class="alert-link">@TempData["basarili"]</a>.
    </div>
}

<div class="container">

    <div class="row pt-3 pb-4">
        <h3><strong>Doktorlar Listesi</strong></h3>
    </div>

    <table class="table table-bordered">
        <tr>
        <thead>
        <th>Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Alan</th>
        <th>Calisma Saatleri</th>
        <th>@* guncelle *@</th>
        <th>@* ekle *@</th>
        <th>@* detay *@</th>
        </thead>
        <tbody>
                @foreach (var doctor in Model)
                {
                <tr>
                    <td align="center" valign="middle"></td>
                    <th>@doctor.Id</th>
                    <th>@doctor.Name</th>
                    <th>@doctor.Surname</th>
                    <th>@doctor.Department</th>
                    <th>
                            @* Calisma Saatleri *@
                            @if (doctor.WorkingHourses != null && doctor.WorkingHourses.Any())
                            {
                            <ul>
                                    @foreach (var time in doctor.WorkingHourses)
                                    {
                                    <li>@time.Times</li>
                                    }
                            </ul>
                            }
                            
                    </th>
                    <th align="center" valign="middle">
                        <a asp-controller="Doctor" asp-action="AddUpdate" style="width:fit-content" asp-route-id=@doctor.Id class="btn btn-outline-success">Güncelle</a>
                    </th>
                    <th align="center" valign="middle">
                        <a asp-controller="Doctor" asp-action="Delete" style="width:fit-content" asp-route-id="@doctor.Id" class="btn btn-outline-primary">Sİl</a>
                    </th>
                    <th align="center" valign="middle">
                        <a asp-controller="Doctor" asp-action="Detail" style="width:fit-content" asp-route-id="@doctor.Id" class="btn btn-outline-info">Detay</a>
                    </th>
                </tr>
                }
        </tbody>
        </tr>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <div class="d-grid gap-2">
                <a asp-controller="Doctor" asp-action="AddUpdate" class="btn btn-lg btn-outline-primary" type="button"> Doktor Ekle  </a>
            </div>
        </div>
    </div>

</div>
