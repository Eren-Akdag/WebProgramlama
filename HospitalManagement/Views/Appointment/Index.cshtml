@using HospitalManagement.Data;
@model List<Appointment>

<h1 class="text-center my-4 text-dark">Randevu Index</h1>

@if (@TempData["basarili"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Tebrikler!</strong> <a href="#" class="alert-link">@TempData["basarili"]</a>.
    </div>
}

<div class="container">
    <div class="row">
        @foreach (var appointment in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm border-dark">
                    <div class="card-body">
                        <h5 class="card-title text-dark">@appointment.Patient.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@appointment.Doctor.Name</h6>
                        <p class="card-text">@appointment.Policlinic.Name</p>
                        <p class="card-text">@appointment.Dates</p>
                        <p class="card-text">@appointment.Description</p>
                        <a asp-controller="Appointment" asp-action="Update" asp-route-id=@appointment.Id class="btn btn-outline-success">Güncelle</a>
                        <a asp-controller="Appointment" asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-outline-dark">Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
