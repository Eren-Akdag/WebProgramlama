@using HospitalManagement.Data;
@model List<Patient>

<h1 class="text-center my-4 text-dark">Hastalar Sayfasi</h1>

@if (@TempData["basarili"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Tebrikler!</strong> <a href="#" class="alert-link">@TempData["basarili"]</a>.
    </div>
}

<div class="container">
    <div class="row">
        @foreach (var hasta in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm border-dark">
                    <div class="card-body">
                        <h5 class="card-title text-dark">@hasta.Name @hasta.Surname</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@hasta.Telephone</h6>
                        <p class="card-text">@hasta.Description</p>
                        <a asp-controller="Patient" asp-action="Update" asp-route-id=@hasta.Id class="btn btn-outline-success">Güncelle</a>
                        <a asp-controller="Patient" asp-action="Delete" asp-route-id="@hasta.Id" class="btn btn-outline-dark">Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="d-grid gap-2 my-3">
        <a asp-controller="Patient" asp-action="Add" class="btn btn-lg btn-dark">Hasta Ekle</a>
    </div>
</div>

